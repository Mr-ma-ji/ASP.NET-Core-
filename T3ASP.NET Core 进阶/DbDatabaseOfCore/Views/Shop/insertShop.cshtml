
@{
    ViewData["Title"] = "insertShop";
}

<h3>商品添加</h3>

<div class="col-6">
	@using (Html.BeginForm())
	{
		<div class="form-group">
			<div class="input-group">
				<label class="input-group-prepend">
					<span class="input-group-text">
						商品名
					</span>
				</label>
				<input type="text" name="ProductName" value="" class="form-control" placeholder="请输入商品名......" />
			</div>
		</div>
		<div class="form-group">

			<div class="input-group">
				<label class="input-group-prepend">
					<span class="input-group-text">
						价格
					</span>
				</label>
				<input type="text" name="ProductPrice" value="" class="form-control" placeholder="请输入商品价格......" />
			</div>

		</div>
		<div class="form-group">
			<input type="submit" value="保存" class="btn btn-primary" />
			<a href="Index" class="btn btn-primary">返回首页</a>
		</div>
	}
</div>
